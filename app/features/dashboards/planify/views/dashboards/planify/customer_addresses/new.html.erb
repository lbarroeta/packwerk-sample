<%= render Shared::Forms::NavsComponent.new(
  options: Admin::Planify::CustomerDecorator.form_steps,
  current_url_path: request.path
) %>

<%= render partial: 'admin/planify/customer_addresses/forms/create' %>

<script>
  $(document).ready( function() {
    $('.step').each(function(index, element) {
      // element == this
      $(element).not('.active').addClass('done');
      $('.done').html('<i class="bi bi-clipboard2-data-fill"></i>');
      if($(this).is('.active')) {
        return false;
      }
    });
  });
</script>