<div class="card card-body mt-4">
  <div class="row">
    <div class="col">
      <h5 class="font-weight-bolder">Datos de direccion</h5>
    </div>
  </div>

  <div class="row justify-content-center align-items-center mt-2">
    <div class="col">
      <label style="font-weight: bold">Pais</label>
      <label><%= Dashboards::Planify::CustomerAddressDecorator.new(@customer.address).formatted_country %></label>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col">
      <label style="font-weight: bold">Estado</label>
      <label><%= Dashboards::Planify::CustomerAddressDecorator.new(@customer.address).formatted_state %></label>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col">
      <label style="font-weight: bold">Ciudad</label>
      <label><%= Dashboards::Planify::CustomerAddressDecorator.new(@customer.address).formatted_city %></label>
    </div>
  </div>
</div>