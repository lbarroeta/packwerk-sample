<div class="row mt-4">
  <div class="col-xl-3 col-lg-3 col-md-12 col-xs-12">
    <%= turbo_frame_tag dom_id(@customer) do %>
      <div class="list-group" id="list-tab" role="tablist" data-controller="">
        <a class="list-group-item list-group-item-action active" data-bs-toggle="list" href="#customer-basic-info" role="tab" aria-controls="customer-basic-info">Informacion basica</a>
        <a class="list-group-item list-group-item-action" id="list-settings-list" data-bs-toggle="list" href="#list-settings" role="tab" aria-controls="list-settings">Gerentes</a>
        <a class="list-group-item list-group-item-action" id="list-messages-list" data-bs-toggle="list" href="#customer-contact" role="tab" aria-controls="customer-contact-list">Contacto</a>
        <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="#list-messages" role="tab" aria-controls="list-profile">Direccion</a>
      </div>
    <% end %>
  </div>

  <div class="col-xl-9 col-lg-9 col-md-12 col-xs-12">
    <div class="tab-content" id="nav-tabContent">
      <div class="card card-body">
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show active" id="customer-basic-info" role="tabpanel" aria-labelledby="customer-basic-info-list">
            <%= render partial: 'dashboards/planify/customers/show/basic_info' %>
          </div>

          <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">...</div>
          <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">...</div>

          <div class="tab-pane fade" id="customer-contact" role="tabpanel" aria-labelledby="customer-contact-list">
            <%= render partial: 'dashboards/planify/customers/show/contact_data', locals: { contact: @customer.contact } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>