<div class="card card-body mt-4">
  <div class="row">
    <div class="col">
      <h5 class="font-weight-bolder">Datos de cliente</h5>
    </div>
  </div>

  <div class="row justify-content-center align-items-center mt-2">
    <div class="col">
      <label style="font-weight: bold">Tipo de cliente</label>
      <label><%= ::Dashboards::Planify::CustomersDecorator.new(@customer).formatted_customer_type %></label>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col">
      <label style="font-weight: bold">Identificador</label>
      <label><i class="bi bi-info-circle"></i> <%= @customer.identifier %></label>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col">
      <label style="font-weight: bold">Nombre</label>
      <label><i class="bi bi-building"></i> <%= @customer.name %></label>
    </div>
  </div>
</div>