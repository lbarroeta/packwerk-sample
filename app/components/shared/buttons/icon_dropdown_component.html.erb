<div class="dropdown m-0">
  <button class="btn btn-icon btn-2 dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" style="box-shadow: none">
    <span class="btn-inner--icon">
      <i class="bi bi-three-dots-vertical" style="font-size: 16px"></i>
    </span>
  </button>

  <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="dropdownMenuButton1">
    <% options.each do |option| %>
      <%= link_to option[:title], option[:url], method: option[:method], class: 'dropdown-item', data: { controller: option[:controller] } %>
    <% end %>
  </ul>
</div>