<%= form_with url: sessions_path do |form| %>
  <section class="min-vh-100" style="background-color: white; display: flex">
    <div class="container">
      <div class="row">
        <div class="col-12 mx-auto">
          <div class="card z-index-0">
            <div class="card-header text-center pt-4">
              <h5>Iniciar sesión</h5>
            </div>
            <div class="card-body">
              <div class="text-left">
                <div class="mb-3">
                  <label>Email</label>
                  <%= form.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Escribe tu email', required: true %>
                </div>

                <div class="mb-3">
                  <div class="row">
                    <div class="col">
                      <label>Contraseña</label>
                    </div>

                    <div class="col">
                      <a class="text-sm" href="<%#= new_password_path(resource_name) %>">¿Olvidaste tu contraseña?</a>
                    </div>
                  </div>

                  <%= form.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Contraseña', required: true %>
                </div>

                <div class="form-check form-switch">
                  <%= form.check_box :remember_me, class: 'form-check-input' %>
                  <label class="form-check-label" for="rememberMe">Recordarme</label>
                </div>

                <div class="text-center mb-4">
                  <%= form.submit "Iniciar sesion", class: 'btn bg-gradient-dark w-100 my-4 mb-2' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>